# The port this server will run on.
PORT=3005
# The IP address for the first inverter
INVERTER_ONE_IP="192.168.0.55"
# The IP address for the second inverter
INVERTER_TWO_IP="192.168.0.71"
# The data "id" for the first inverter (get from discovery script)
INVERTER_ONE_DATA_ID=
# The data "id" for the second inverter (get from discovery script)
INVERTER_TWO_DATA_ID=
# The data key for current watt generation (6100_40263F00 recommended)
INVERTER_LIVE_WATT_DATA_KEY=6100_40263F00
# The data key for daily yield in Wh (discovered: 6400_00262200)
INVERTER_DAILY_YIELD_KEY=6400_00262200
# The data key for lifetime total yield in Wh (6400_00260100)
INVERTER_TOTAL_YIELD_KEY=6400_00260100
# Password to login to inverters
INVERTER_PASS=
# Database path
DB_PATH=./data/solar.db
# Data collection polling interval (seconds)
POLL_INTERVAL_SECONDS=30
# How long to retain detailed readings (days)
DATA_RETENTION_DAYS=7
# Request timeout for inverter calls (milliseconds)
INVERTER_TIMEOUT_MS=5000