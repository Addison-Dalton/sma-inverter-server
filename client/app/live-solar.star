load("render.star", "render")
load("http.star", "http")
load("encoding/base64.star", "base64")
load("cache.star", "cache")

SERVER_PORT="3005"
INVERTER_LOCAL_SERVER_HOST = "http://localhost:" + SERVER_PORT
INVERTER_DOCKER_SERVER_HOST = "http://host.docker.internal:" + SERVER_PORT
INVERTER_LIVE_DATA = INVERTER_DOCKER_SERVER_HOST + "/live/watts"
WATTS_CACHE_KEY = "current_watts"

SUN_ICON = base64.decode("""

""")

def main():
    watts = getWatts()
    return render.Root(
        delay = 600, # how often any animations occur
        child = render.Box(
            render.Row(
                expanded = True,
                main_align = "space_evenly",  # Controls horizontal alignment
                cross_align = "center",  # Controls vertical alignment
                children = [
                    render.Text("%sw" % int(watts), font = "6x13"),
                    render.Box(render.Image(src = SUN_ICON), width = 25),
                ],
            ),
        ),
    )

def getWatts():
    watts_cached = cache.get(WATTS_CACHE_KEY)
    if watts_cached != None:
        print("Hit! Displaying cached data")
        return int(watts_cached)
    else:
        watts = fetchWatts()
        cache.set(WATTS_CACHE_KEY, str(int(watts)), ttl_seconds = 30)
        return watts

def fetchWatts():
    rep = http.get(INVERTER_LIVE_DATA)
    if rep.status_code != 200:
        fail("Inverter request failed with status %d", rep.status_code)
    watts = rep.json()["watts"]
    return watts
